{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "WebWorker"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "target": "ES2022",
    "experimentalDecorators": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS"
  },
  "include": [
    "src/**/*.ts",
    "serverless"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".vscode/**/*",
    ".idea/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
